<?xml version="1.0" encoding="utf-8"?>

    <android.support.percent.PercentRelativeLayout
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/itembackground"/>

        <android.support.percent.PercentRelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:contentDescription="3"
                android:id="@+id/ivChar"
                android:scaleType="fitXY"
                android:src="@drawable/ch11"
                app:layout_heightPercent="65%"
                android:layout_centerInParent="true"
                app:layout_widthPercent="44%"
                />

            <ImageView
                android:visibility="invisible"
                app:layout_marginLeftPercent="34%"
                android:layout_centerVertical="true"
                android:id="@+id/pt1"
                android:contentDescription="1"
                android:src="@drawable/ch11_1"
                app:layout_heightPercent="50%"
                app:layout_widthPercent="20%"
                />

            <ImageView
                android:visibility="invisible"
                app:layout_marginLeftPercent="46%"
                android:layout_centerVertical="true"
                android:id="@+id/pt2"
                android:contentDescription="2"
                android:src="@drawable/ch11_2"
                app:layout_heightPercent="50%"
                app:layout_widthPercent="20%"
                />
            <ImageView
                android:visibility="invisible"
                app:layout_marginTopPercent="55%"
                android:id="@+id/pt3"
                android:contentDescription="3"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ch11_3"
                app:layout_heightPercent="9%"
                app:layout_widthPercent="25%"
                />

            <ImageView
                android:layout_toLeftOf="@+id/ivChar"
                android:layout_centerVertical="true"
                android:id="@+id/iv1"
                android:scaleType="fitXY"

                android:contentDescription="1"
                android:src="@drawable/ch11_1"
                app:layout_heightPercent="48%"
                app:layout_widthPercent="16%"
                />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ivChar"
                android:id="@+id/iv2"
                android:scaleType="fitXY"

                android:contentDescription="2"
                android:src="@drawable/ch11_2"
                app:layout_heightPercent="48%"
                app:layout_widthPercent="16%"
                />
            <ImageView
                android:layout_below="@id/ivChar"
                android:id="@+id/iv3"
                android:scaleType="fitXY"

                android:contentDescription="3"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ch11_3"
                app:layout_heightPercent="8%"
                app:layout_widthPercent="25%"
                />
            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv4"
                app:layout_heightPercent="9%"
                app:layout_widthPercent="25%"
                />
            <ImageView
                android:visibility="invisible"
                android:id="@+id/iv5"
                app:layout_heightPercent="9%"
                app:layout_widthPercent="25%"
                />

            <ImageView
                android:src="@drawable/exit"
                android:id="@+id/ivExit"
                app:layout_marginPercent="@dimen/exit_btn_margin"
                app:layout_widthPercent="@dimen/exit_btn_size"
                app:layout_heightPercent="@dimen/exit_btn_size" />

            <com.google.android.gms.ads.AdView
                android:layout_alignParentBottom="true"
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id">
            </com.google.android.gms.ads.AdView>

        </android.support.percent.PercentRelativeLayout>
    </android.support.percent.PercentRelativeLayout>
